{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@unified-memory/db": ["../../packages/db/src"],
      "@unified-memory/shared/*": ["../../packages/shared/src/*"],
      "@unified-memory/transformers": ["../../packages/transformers/src"],
      "@momo/embedding": ["../../packages/embedding/src"],
      "@momo/graph": ["../../packages/graph/src"],
      "@momo/query": ["../../packages/query/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
