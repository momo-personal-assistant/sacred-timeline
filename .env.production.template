# ============================================================================
# Production Environment Variables Template
# ============================================================================
# Copy this to Vercel Dashboard > Settings > Environment Variables
# Replace all placeholder values with actual credentials

# ============================================================================
# PostgreSQL (Supabase)
# ============================================================================
# Get these from: Supabase Dashboard > Settings > Database > Connection string
# Use "Connection pooling" with Transaction mode
POSTGRES_HOST=xxx.pooler.supabase.com
POSTGRES_PORT=6543
POSTGRES_USER=postgres.xxx
POSTGRES_PASSWORD=your_supabase_password_here
POSTGRES_DB=postgres
POSTGRES_MAX_CONNECTIONS=20
VECTOR_DIMENSIONS=1536

# ============================================================================
# Application
# ============================================================================
NODE_ENV=production
WORKSPACE=tenxai

# ============================================================================
# OpenAI
# ============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Linear
# ============================================================================
# Get from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_...
LINEAR_TEAM_KEY=TEN

# ============================================================================
# Logging (Optional)
# ============================================================================
LOG_LEVEL=info

