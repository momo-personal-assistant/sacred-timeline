{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@unified-memory/shared": ["./packages/shared/src"],
      "@unified-memory/shared/*": ["./packages/shared/src/*"],
      "@unified-memory/db": ["./packages/db/src"],
      "@unified-memory/db/*": ["./packages/db/src/*"],
      "@momo/ingestion": ["./packages/ingestion/src"],
      "@momo/ingestion/*": ["./packages/ingestion/src/*"],
      "@momo/transformers": ["./packages/transformers/src"],
      "@momo/transformers/*": ["./packages/transformers/src/*"],
      "@momo/graph": ["./packages/graph/src"],
      "@momo/graph/*": ["./packages/graph/src/*"],
      "@momo/embedding": ["./packages/embedding/src"],
      "@momo/embedding/*": ["./packages/embedding/src/*"],
      "@momo/query": ["./packages/query/src"],
      "@momo/query/*": ["./packages/query/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "build"]
}
