# =============================================================================
# UNIFIED MEMORY - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# =============================================================================
# POSTGRESQL WITH PGVECTOR
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5434
POSTGRES_USER=unified_memory
POSTGRES_PASSWORD=unified_memory_dev
POSTGRES_DB=unified_memory
POSTGRES_MAX_CONNECTIONS=20
VECTOR_DIMENSIONS=1536                 # Default for OpenAI embeddings (adjust based on your model)

# =============================================================================
# API SERVICE (Next.js)
# =============================================================================
NODE_ENV=development
PORT=3000
API_SECRET_KEY=                        # Secret key for API authentication

# =============================================================================
# INGESTION SERVICE
# =============================================================================
INGESTION_PORT=3001
BATCH_SIZE=100                         # Number of items to process in batch

# =============================================================================
# TRANSFORMERS SERVICE
# =============================================================================
TRANSFORMER_PORT=3002
PLATFORMS=slack,discord,email          # Comma-separated list of supported platforms

# =============================================================================
# EMBEDDINGS PROVIDER
# =============================================================================
# Choose one of the following:

# Option 1: OpenAI
OPENAI_API_KEY=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                        # Required for OpenAI embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Option 2: Cohere
