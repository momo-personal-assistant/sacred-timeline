{
  "name": "unified-memory",
  "version": "0.1.0",
  "private": true,
  "description": "Unified memory system with vector storage and multi-platform support",
  "scripts": {
    "dev": "pnpm --parallel --filter './apps/**' --filter './services/**' dev",
    "dev:api": "pnpm --filter api dev",
    "dev:ingestion": "pnpm --filter ingestion dev",
    "dev:transformers": "pnpm --filter transformers dev",
    "build": "pnpm --filter './apps/**' --filter './services/**' build",
    "build:api": "pnpm --filter api build",
    "build:ingestion": "pnpm --filter ingestion build",
    "build:transformers": "pnpm --filter transformers build",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.11.0"
}
